<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewHeaderStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="TextViewSubtitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/search_view_background</item>
        <item name="submitBackground">@drawable/search_view_background</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="editTextColor">@color/primary_text_color</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:editTextColor">@color/primary_text_color</item>
    </style>

</resources>